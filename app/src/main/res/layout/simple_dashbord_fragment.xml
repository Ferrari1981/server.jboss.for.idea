<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard.MainActivity_Dashboard">





    <!--   //TODO   #1 Face APP -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialcardview_dashboard_faceapp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/dialog_bg"
        android:animateLayoutChanges="true"
        android:gravity="center"
        app:cardBackgroundColor="#F2F8F8"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="10dp"
        android:translationZ="10dp"
        app:strokeColor="#E0DFE4"
        app:strokeWidth="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialtextview_dashborn_face"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="ООО Союз-Автодор"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="#C0C0C0"
                android:textSize="16dp"
                android:textStyle="bold"
                android:translationZ="10dp"
                android:visibility="visible"
                app:cardElevation="1dp"
                app:cardMaxElevation="10dp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <!--   //TODO   #1  конец табель -->




 <!--   //TODO   #2 TABEL -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialcardview_dashboard_tabeль"
        android:layout_below="@+id/materialcardview_dashboard_faceapp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/dialog_bg"
        android:animateLayoutChanges="true"
        android:gravity="center"
        app:cardBackgroundColor="#F2F8F8"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="10dp"
        android:translationZ="10dp"
        app:strokeColor="#E0DFE4"
        app:strokeWidth="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <ImageView
                android:id="@+id/imageview_dashborn_tabel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:translationZ="10dp"
                android:visibility="visible"
                app:cardElevation="1dp"
                app:cardMaxElevation="10dp"
                app:srcCompat="@mipmap/icon_dashdornd_tabel6" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialtextview_dashborn_tabel"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageview_dashborn_tabel"
                android:text="табель"
                android:textColor="#C0C0C0"
                android:textSize="17dp"
                android:textStyle="bold"
                android:translationZ="10dp"
                android:visibility="visible"
                app:cardElevation="1dp"
                app:cardMaxElevation="10dp" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <!--   //TODO   #1  конец TABEL -->




    <!--   //TODO   #3 Настройки -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialcardview_dashboard_settings"
        android:layout_below="@+id/materialcardview_dashboard_tabeль"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"



        android:layout_alignParentLeft="true"
        android:background="@drawable/dialog_bg"
        android:animateLayoutChanges="true"
        android:gravity="center"
        app:cardBackgroundColor="#F2F8F8"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="10dp"
        android:translationZ="10dp"
        app:strokeColor="#E0DFE4"
        app:strokeWidth="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageview_dashborn_settings"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:translationZ="10dp"
                android:visibility="visible"
                app:cardElevation="1dp"
                app:cardMaxElevation="10dp"
                app:srcCompat="@drawable/icon_new_dashaborad_settings" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <!--   //TODO   #1  конец Настройки  -->








    <!--   //TODO   # Пользователи -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialcardview_dashboard_users333"
        android:layout_below="@+id/materialcardview_dashboard_tabeль"
        android:layout_toRightOf ="@+id/materialcardview_dashboard_settings"

        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"


        android:background="@drawable/dialog_bg"
        android:animateLayoutChanges="true"
        android:gravity="center"
        app:cardBackgroundColor="#F2F8F8"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="10dp"
        android:translationZ="10dp"
        app:strokeColor="#E0DFE4"
        app:strokeWidth="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageview_dashborn_users"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:translationZ="10dp"
                android:visibility="visible"
                app:cardElevation="1dp"
                app:cardMaxElevation="10dp"
                app:srcCompat="@drawable/icon_new_dashborads_peoples" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <!--   //TODO   #1  конец Настройки  -->







    <!--   //TODO   # Пользователи -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialcardview_dashboard_settingss"
        android:layout_below="@+id/materialcardview_dashboard_faceapp"
        android:layout_toRightOf ="@+id/materialcardview_dashboard_tabeль"


        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"


        android:background="@drawable/dialog_bg"
        android:animateLayoutChanges="true"
        android:gravity="center"
        app:cardBackgroundColor="#F2F8F8"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="10dp"
        android:translationZ="10dp"
        app:strokeColor="#E0DFE4"
        app:strokeWidth="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageview_dashborn_completemoney"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:translationZ="10dp"
                android:visibility="visible"
                app:cardElevation="1dp"
                app:cardMaxElevation="10dp"
                app:srcCompat="@mipmap/icon_new_dashboard_completempnye" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialtextview_dashborn_completemoney"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageview_dashborn_completemoney"
                android:text="согласования"
                android:textColor="#C0C0C0"
                android:textSize="17dp"
                android:textStyle="bold"
                android:translationZ="10dp"
                android:visibility="visible"
                app:cardElevation="1dp"
                app:cardMaxElevation="10dp" />


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <!--   //TODO   #1  конец Пользователи  -->
































</RelativeLayout>
