<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard.MainActivity_Dashboard">









 <!--   //TODO табель -->


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialcardview_dashboard"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/dialog_bg"
        android:animateLayoutChanges="true"
        android:gravity="center"
        app:cardBackgroundColor="#F2F8F8"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="10dp"
        android:translationZ="10dp"
        app:strokeColor="#E0DFE4"
        app:strokeWidth="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <ImageView
                android:id="@+id/imageview_dashborn_tabel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:translationZ="10dp"
                android:visibility="visible"
                app:cardElevation="1dp"
                app:cardMaxElevation="10dp"
                app:srcCompat="@mipmap/icon_dashdornd_tabel5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialtextview_dashborn_tabel"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                app:cardMaxElevation="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:text="Табель"
                android:textSize="19dp"
                android:translationZ="10dp"
                android:visibility="visible"
                android:layout_toRightOf="@+id/imageview_dashborn_tabel"
                app:cardElevation="1dp" />







        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
