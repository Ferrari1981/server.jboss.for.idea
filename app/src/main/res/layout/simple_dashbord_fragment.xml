<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativelayout_container_dashboard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard.MainActivity_Dashboard">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialcardview_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/dialog_bg"
        android:animateLayoutChanges="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        app:checkedIcon="@drawable/icon_dsu1_create_new_tasks"
        app:cardBackgroundColor="#FFFFE0"
        app:cardCornerRadius="5dp"
        app:cardElevation="20dp"
        app:cardMaxElevation="10dp"
        android:translationZ="1dp"
        app:strokeColor="#FCFAFA"
        app:strokeWidth="1dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">






         <!--   //TODO ТАБЕЛЬ -->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialcardview_dashboard_tabel"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dialog_bg"
                android:animateLayoutChanges="true"
                android:gravity="center"
                app:cardBackgroundColor="#FFDAB9"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="10dp"
                android:translationZ="10dp"
                app:strokeColor="#FCFAFA"
                app:checkedIcon="@drawable/icon_dsu1_create_new_tasks"
                app:strokeWidth="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">






                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textview_newtabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:cardMaxElevation="10dp"
                        android:translationZ="10dp"
                        android:visibility="visible"
                        android:drawableTop="@mipmap/icon_dashdornd_tabel2"

                        app:cardElevation="1dp" />








                </RelativeLayout>



            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>










    </com.google.android.material.card.MaterialCardView>



















</RelativeLayout>
